<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainHourController">
   <center>
      <Pane prefHeight="463.0" prefWidth="675.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="mainClockLabel" layoutX="240.0" layoutY="74.0" text="hh:mm:ss aa">
               <font>
                  <Font name="System Bold Italic" size="33.0" />
               </font>
            </Label>
            <Label layoutX="257.0" layoutY="14.0" prefHeight="50.0" prefWidth="178.0" text="Local Hour" textFill="#38c942">
               <font>
                  <Font name="System Bold Italic" size="34.0" />
               </font>
            </Label>
            <ListView fx:id="timeZonesList" layoutX="40.0" layoutY="160.0" prefHeight="242.0" prefWidth="253.0" />
            <ListView fx:id="externalHoursList" layoutX="411.0" layoutY="160.0" prefHeight="228.0" prefWidth="224.0" />
            <Button layoutX="95.0" layoutY="409.0" mnemonicParsing="false" onAction="#addHour" text="Add Selected Time zone" />
            <Label layoutX="94.0" layoutY="123.0" text="Time Zones" textFill="#21a89f">
               <font>
                  <Font name="System Bold Italic" size="27.0" />
               </font>
            </Label>
            <Button layoutX="523.0" layoutY="39.0" mnemonicParsing="false" onAction="#showCronometer" prefHeight="56.0" prefWidth="135.0" text="Cronometer">
               <font>
                  <Font name="Century Gothic" size="16.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </center>
</BorderPane>
